{
  "name": "@probot-ng/octokit-auth-probot-ng",
  "version": "0.0.0-development",
  "description": "Octokit authentication strategy that supports token, app (JWT), and event-based installation authentication",
  "main": "index.js",
  "scripts": {
    "build": "pika build",
    "lint": "prettier --check '{src,test}/**/*.{ts,md}' *.md *.json",
    "lint:fix": "prettier --write '{src,test}/**/*.{ts,md}' *.md *.json",
    "pretest": "npm run -s lint",
    "test": "jest --coverage"
  },
  "repository": "github:probot-ng/octokit-auth-probot-ng",
  "keywords": [
    "octokit-authentication-strategy"
  ],
  "author": "Gregor Martynus (https://twitter.com/gr2m)",
  "license": "ISC",
  "dependencies": {
    "@octokit/auth-app": "^6.0.0",
    "@octokit/auth-token": "^4.0.0",
    "@octokit/auth-unauthenticated": "^5.0.0",
    "@octokit/types": "^11.1.0"
  },
  "peerDependencies": {
    "@octokit/core": ">=3.2"
  },
  "devDependencies": {
    "@octokit/core": "^5.0.0",
    "@octokit/tsconfig": "^2.0.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.6.0",
    "fetch-mock": "^9.11.0",
    "jest": "^29.6.4",
    "mockdate": "^3.0.5",
    "node-fetch": "^2.6.7",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ]
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": {
            "esModuleInterop": true
          }
        }
      ]
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ]
    ]
  }
}
